<Window x:Class="ExcelChatAddin.GeminiResponseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemini Response" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gemini からの回答" FontWeight="Bold" Margin="0,0,0,8"/>

        <TextBox x:Name="txtResponse"
                 Grid.Row="1"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>

        <Button Grid.Row="2" Content="閉じる" Width="120" Height="30"
                HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="BtnClose_Click"/>
    </Grid>
</Window>
