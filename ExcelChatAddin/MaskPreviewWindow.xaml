<Window x:Class="ExcelChatAddin.MaskPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="マスキング確認"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0"
                   Text="送信内容（マスキング後）"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,8"/>

        <!-- 本文表示 -->
        <TextBox Grid.Row="1"
                 x:Name="BodyBox"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Padding="8"/>

        <!-- ボタン -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="閉じる"
                    Width="100"
                    Padding="10,4"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
